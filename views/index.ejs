<% include partials/header %>	<!-- load partials/header.ejs -->

	<h1>Add Customer</h1>
	<% if(errors != undefined) { %>
		<ul>
		<% errors.forEach(function (error){ %>
			<li><%= error.msg; %></li>

		<% }); %>
		</ul>
	<% } %>
	<form action="/users/add" method="POST">
		<label>First Name</label>
		<br>
		<input type="text" name="firstName">
		<br>
		<label>Last Name</label>
		<br>
		<input type="text" name="lastName">
		<br>
		<label>Email</label>
		<br>
		<input type="email" name="email">
		<br><br>
		<input type="submit" name="Submit">
	</form>
	<h1> <%= title %></h1>
	<% users.forEach(function(user) { %>
		<li><%= user.firstName + ' '+  user.lastName; %> - <a href="#" class="deleteUser" data-id="<%= user._id; %>">Delete</a>
		</li>
	<% }) %>

<% include partials/footer %>	<!-- load partials/footer.ejs -->
